extends ./templateAdmin.pug

block content
    .create
        h2 This is a form that you can create a new products
        form(action="/admin/create" method="post" enctype="multipart/form-data") 
                .form-group
                    label(for='productName') Product Name:
                    input#exampleInputEmail1.form-control(type='text' placeholder="Product Name" name="name")
                .form-group
                    label(for='description') Description:
                    input#exampleInputDescription.form-control(type='text' placeholder="Description" name="description")
                .form-group
                    label(for='price') Price:
                    input#exampleInputPrice.form-control(type='text' placeholder="Price" name="price") 
                .form-group
                    label(for='file') Image:
                    input#exampleFormControlFile1.form-control-file(type='file' name="image")
                button.btn.btn-outline-info Create
        style(type='text/css').
                body{
                    background-image:url(../img/background/bloom.jpg);
                    background-repeat:no-repeat;
                    background-position:left bottom;
                    background-size:400px;
                }