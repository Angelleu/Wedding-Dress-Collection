extends ./templateAdmin.pug

block content
        h2 This is a form that you can update an existing wedding dress
        form(action="/admin/update/" +product.id method="post" enctype="multipart/form-data")
            .form-group
                label(for='productName') Product Name:
                input#exampleInputName.form-control(type='text' placeholder="Product Name" name="name" value=product.name)
            .form-group
                label(for='description') Description:
                input#exampleInputDescription.form-control(type='text' placeholder="Description" name="description" value=product.description)
            .form-group
                label(for='price') Price:
                input#exampleInputPrice.form-control(type='text' placeholder="Price" name="price" value=product.price) 
            .form-group
                label(for='file') Image:
                input#exampleFormControlFile1.form-control-file(type='file' name="image")
            button.btn.btn-outline-info Update
            a.btn.btn-outline-dark(href='/admin') Back
        style(type='text/css').
                    body{
                        background-image:url(../../img/background/b-1.png);
                        background-repeat:no-repeat;
                        background-position:left;
                        background-size:800px;
                    }
                    h2{
                        text-align:right;
                    }