extends ./template.pug

block content
    .row
        each product in products
            .col-auto-mb-3
                .card(style='width: 20rem;')
                    .card-body
                        img.img-fluid(src="/img/upload/" + product.image alt=product.name, width='250')
                        h5.card-title=product.name 
                        p.card-text=product.description
                        p.card-text Price: $ #{ product.price}
        style(type='text/css').
                        .newArrival{
                            color:black;
                            padding-top:50px;
                            padding-left:50px
                        }
                        .newArrival h2{
                            font-weight:bold;
                            font-size:15px;
                        }
                        .newArrival a{
                            color:#b0aac2;
                            font-size:15px;
                        }

                        .newArrival a:hover{
                            color:#b0aac2;
                            font-size:20px;
                        }
                        .card-body{
                            margin:auto;
                        }
                        .card-body img{
                            display:block;
                            max-width:18rem;
                            max-height:23rem;
                            width:auto;
                            height:auto;
                        }
                        a.btn.btn-outline-primary{
                            color:blue;
                        }
                        a.btn.btn-outline-primary:hover{
                            color:white;
                        }
                        .card-body img{
                            height:350
                        }
    footer
        p.
            @copyright to Angel Leu



            